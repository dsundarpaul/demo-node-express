    },
    {
      "name": "3. File Handling",
      "item": [
        {
          "name": "Upload Student Photo",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "photo",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "studentId",
                  "value": "1",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:3000/api/upload/student-photo",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "upload", "student-photo"]
            }
          }
        },
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "documentType",
                  "value": "transcript",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:3000/api/upload/document",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "upload", "document"]
            }
          }
        },
        {
          "name": "List All Uploads",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/uploads/list",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "uploads", "list"]
            }
          }
        },
        {
          "name": "Download File",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/download/:filename",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "download", ":filename"],
              "variable": [
                {
                  "key": "filename",
                  "value": "your-file-name-here"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "4. Event Emitting",
      "item": [
        {
          "name": "Listen to Events (SSE)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/events/listen",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "events", "listen"]
            }
          }
        },
        {
          "name": "Trigger Custom Event",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"eventType\": \"customEvent\",\n  \"data\": {\n    \"message\": \"Test event triggered\"\n  }\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/events/trigger",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "events", "trigger"]
            }
          }
        }
      ]
    },
    {
      "name": "Root - API Info",
      "request": {
        "method": "GET",
        "url": {
          "raw": "http://localhost:3000/",
          "host": ["localhost"],
          "port": "3000",
          "path": [""]
        }
      }
    }
  ]
