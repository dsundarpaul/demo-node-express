{
  "info": {
    "name": "School CMS API",
    "description": "Node.js demonstrations: FS, Streaming, File Handling, Event Emitting",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. File System Operations",
      "item": [
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Emma Watson\",\n  \"grade\": \"10th\",\n  \"age\": 16,\n  \"parentContact\": \"+1-555-0123\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/students",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "students"]
            }
          }
        },
        {
          "name": "Get All Students",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/students",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "students"]
            }
          }
        },
        {
          "name": "Get Single Student",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/students/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "students", "1"]
            }
          }
        },
        {
          "name": "Update Student",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"grade\": \"11th\",\n  \"age\": 17\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/students/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "students", "1"]
            }
          }
        },
        {
          "name": "Delete Student",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "http://localhost:3000/api/students/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "students", "1"]
            }
          }
        },
        {
          "name": "Create Announcement",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"School Holiday Notice\",\n  \"content\": \"School will be closed on Monday for maintenance\",\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/announcements",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "announcements"]
            }
          }
        },
        {
          "name": "Get All Announcements",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/announcements",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "announcements"]
            }
          }
        },
        {
          "name": "Add Grade",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": 1,\n  \"subject\": \"Mathematics\",\n  \"grade\": \"A\",\n  \"semester\": \"Fall 2024\"\n}"
            },
            "url": {
              "raw": "http://localhost:3000/api/grades",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "grades"]
            }
          }
        },
        {
          "name": "Get Student Grades",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/grades/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "grades", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Data Streaming",
      "item": [
        {
          "name": "Stream Student Report",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/stream/report/1",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "stream", "report", "1"]
            }
          }
        },
        {
          "name": "Stream Large File",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/stream/large-file",
              "host": ["localhost"],
              "port": "3000",
              "path": ["api", "stream", "large-file"]
            }
          }
        },
        {
          "name": "Stream Activity Logs",
          "request": {
            "method": "GET",
            "url": {
              "raw": "http://localhost:3000/api/logs/activity",
